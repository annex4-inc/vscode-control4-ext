{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "compile",
			"group": "build",
			"presentation": {
				"panel": "dedicated",
				"reveal": "never"
			},
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"type": "npm",
			"script": "watch",
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			},
            "presentation": {
				"reveal": "never",
				"panel": "dedicated"
			},
			"problemMatcher": [
				"$tsc-watch"
			],
			"runOptions": {
				"runOn": "folderOpen"
			}
		}
	]
}